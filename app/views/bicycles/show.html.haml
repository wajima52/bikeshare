%section.callaction
  .container
    .row
      .col-lg-12
        .big-cta
          .cta-text
            %h1
              = @bicycle.name
              の詳細ページ 

.container
  %table.table.table-show
    %thead
      %tr
        %th.table-left
        %th
    %tbody
      %tr
        %td 車種
        %td #{@bicycle.name}
      %tr
        %td 貸し出し人
        %td #{@bicycle.user.username}
      %tr
        %td 貸し出し場所
        %td #{@bicycle.place}
      %tr
        %td コメント
        %td #{@bicycle.content}
      - if current_user == @bicycle.user
        %tr
          %td"借りたい"申請者
          - if @applicants.any?
            %td
              = link_to '申請者一覧', demanders_bicycle_path(@bicycle)
          - else
            %td 申請者なし
  %br/
  - if @bicycle.image?
    　　#{image_tag @bicycle.image.url}
    　
  - else
    　#{image_tag "no_image.png", size:"300"}
  %br/
  - if user_signed_in?
    - if current_user == @bicycle.user
      = link_to '編集する', edit_bicycle_path(@bicycle)
      = link_to '削除する', @bicycle, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }
    - else
      = render 'relationships/wanting_button', bicycle: @bicycle
