<h1>こんにちは、<%= current_user.username %>さん</h1>
<p>ユーザー用ページです。</p>

<% if user_signed_in? %>
  <div class="row">
    
    <div class="col-xs-8">
      <%= render 'bicycles/bicycles', bicycles: @bicycles %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>ログインして下さい</h1>
      <%= link_to 'Log in!', new_user_session_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>