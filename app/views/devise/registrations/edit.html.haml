= bootstrap_devise_error_messages!
%section.callaction
  .container
    .row
      .col-lg-12
        .big-cta
          .cta-text
            %h1= t('.title', resource: resource_class.model_name.human , default: "ユーザー情報　編集画面")
.row
  .col-md-6.col-md-offset-3
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      .form-group
        = f.label :メールアドレス
        = f.email_field :email, autofocus: true, class: 'form-control'
      .form-group
        = f.label :現在のパスワード
        = f.password_field :current_password, class: 'form-control'
      .form-group
        = f.label :新しいパスワード
        %i
        = f.password_field :password, autocomplete: "off", class: 'form-control'
      .form-group
        = f.label :パスワード確認
        = f.password_field :password_confirmation, class: 'form-control'
      = f.submit t('.update', default: '更新'), class: 'btn btn-primary'
    %p
      #{link_to '退会する', registration_path(resource_name), data: { confirm: "本当に良いですか?" }, method: :delete}.
    = link_to '戻る', :back
